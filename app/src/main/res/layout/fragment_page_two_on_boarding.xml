<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".PageTwoOnBoardingFragment">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:src="@drawable/logo_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp"></ImageView>


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:src="@drawable/ic_onb_illustration_1"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/publicsansreguler"
        android:layout_marginTop="36dp"
        android:text="Proses Pickup"
        android:textColor="#2D3436"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_width="245dp"
        android:layout_height="42dp"
        android:fontFamily="@font/publicsansreguler"
        android:layout_marginTop="11dp"
        android:text="Driver agen akan segera melakukan proses pickup setelah pelapak melakukan request dan agen telah menyetujuinya."
        android:textAlignment="center"
        android:textColor="#2D3436"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="238dp" />


    <Button
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_button_white"
        android:layout_marginStart="16dp"
        android:text="Lewati"
        android:fontFamily="@font/publicsansreguler"
        android:textSize="14sp"
        android:layout_marginBottom="63dp"
        android:textColor="#20409A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <Button
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        android:text="Selanjutnya"
        android:layout_marginBottom="63dp"
        android:fontFamily="@font/publicsansreguler"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_button_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>